<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>fpl.mals</groupId>
    <artifactId>FplScraper</artifactId>
    <version>1.0.0</version>
    <name>FPL Scraper</name>
    <description>Fantasy Premier League Scraper (Playwright + Apache POI)</description>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- âœ… Playwright -->
        <dependency>
            <groupId>com.microsoft.playwright</groupId>
            <artifactId>playwright</artifactId>
            <version>1.53.0</version>
        </dependency>

        <!-- âœ… Apache POI (Ð±ÐµÐ· ÑÑ‚Ð°Ñ€Ð¾Ð³Ð¾ commons-lang3) -->
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>5.4.0</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.commons</groupId>
                    <artifactId>commons-lang3</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- âœ… Ð›ÐµÐ³ÐºÐ° API-Ñ‡Ð°ÑÑ‚Ð¸Ð½Ð° Log4j, Ð±ÐµÐ· ÑÐ´Ñ€Ð° -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.24.1</version>
        </dependency>

        <!-- âœ… Ð‘ÐµÐ·Ð¿ÐµÑ‡Ð½Ð° Ð²ÐµÑ€ÑÑ–Ñ commons-lang -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.18.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>4.4</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- ðŸ”¹ Ð¡Ñ‚Ð²Ð¾Ñ€ÑŽÑ” â€œfat JARâ€ (Ð²ÑÐµ Ð² Ð¾Ð´Ð½Ð¾Ð¼Ñƒ jar-Ñ„Ð°Ð¹Ð»Ñ–) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals><goal>shade</goal></goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>fpl.mals.FplScraper</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
